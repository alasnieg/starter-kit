<mvc:View controllerName="stk.starterkit.controller.NewCustomer"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
    xmlns="sap.m">
    <Page id="_IDGenPage1" title="Create new customer" showNavButton="true" navButtonPress="handleNavButtonPress">
		<Toolbar id="_IDGenToolbar1" >
            <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
            <Button id="_IDGenButton1" 
            text="Create" 
            type="Accept" 
            iconFirst="true" 
            icon="sap-icon://accept"
            press="onCreatePress" />
        </Toolbar>
        <content>
		    <f:SimpleForm id="SimpleForm" >
			    <f:content>
				    <Label id="_IDGenLabel1" text="Customer ID" textAlign="Center" vAlign="Middle"/>
				    <Input id="CustomerID" width="60%" />
				    <Label id="_IDGenLabel2" text="Customer Name" textAlign="Center"/>
				    <Input id="CustomerName" width="60%" />
			    </f:content>
		    </f:SimpleForm>
        </content>
    </Page>
</mvc:View>